//Crie um algoritmo que calcule a área de um trapézio. Imprima o resultado na tela
programa {
  funcao inicio() {
    inteiro bMaior, bMenor, altura
    escreva("Digite uma base: ")
    leia(bMaior)
    escreva("Digite a outra base: ")
    leia(bMenor)
    escreva("Digite a altura: ")
    leia(altura)

    escreva(((bMaior+bMenor)*altura)/2)
    
  }
}
